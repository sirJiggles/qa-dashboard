<PaperToolbar>
  <PaperToolbarTools>
    <PaperButton
      @iconButton={{true}}
      @onClick={{@toggleSideBar}}
      @disabled={{this.loggedOut}}
    >
      <PaperIcon @icon="menu" />
    </PaperButton>
    <h2>
      {{this.title}}
    </h2>
    <div class="flex"></div>
    <PaperButton
      @iconButton={{true}}
      @onClick={{this.logout}}
    >
      <PaperIcon @icon="exit_to_app" />
      <PaperTooltip @position="bottom">
        {{t "header.logout"}}
      </PaperTooltip>
    </PaperButton>
  </PaperToolbarTools>
</PaperToolbar>