<div class="layout-row">
  <h1 data-test-issues-title>
    {{t 'issue_list.title'}}
  </h1>
</div>
<div class="layout-row layout-xs-column">
  {{#each this.args.issues as |issue|}}
    <div class="layout-column flex-xs flex-gt-xs-50">
      <PaperCard as |Card|>
        <Card.title as |Title|>
          <Title.text as |Text|>
            <Text.headline>
              {{issue}}
            </Text.headline>
            <Text.subhead>
              {{t "issue_list.sample"}}
            </Text.subhead>
          </Title.text>
        </Card.title>
        <Card.actions>
          <PaperButton>
            {{t "issue_list.sample"}}
          </PaperButton>
          <PaperButton>
            {{t "issue_list.sample"}}
          </PaperButton>
        </Card.actions>
      </PaperCard>
    </div>
  {{/each}}
</div>
