<PaperForm
  class="layout layout-column layout-align-center-center layout-fill"
  @onSubmit={{perform this.args.login}} as |Form|
>
  <Form.input
    @type="text"
    @placeholder={{t "login.user_name.placeholder"}}
    @onChange={{action (mut this.username)}}
    @required="true"
    @value={{this.username}}
  />
  <Form.input
    @type="password"
    @placeholder={{t "login.password.placeholder"}}
    @onChange={{action (mut this.password)}}
    @required="true"
    @value={{this.password}}
  />
  <Form.submit-button
    @raised={{true}}
    @primary={{true}}
    @disabled={{if (or this.invalid this.args.login.running) true}}
  >
    {{t "login.submit"}}
  </Form.submit-button>
</PaperForm>

