<div class="layout-row">
  <h1 data-test-issues-title>
    {{this.title}}
  </h1>
</div>
<div class="layout-row layout-xs-column">
  {{#each this.issues as |issue|}}
    <div class="layout-column flex-xs flex-gt-xs-50">
      {{#paper-card as |card|}}
        {{#card.title as |title|}}
          {{#title.text as |text|}}
            {{#text.headline}}
              {{issue}}
            {{/text.headline}}
            {{#text.subhead}}
              {{t "issue_list.sample"}}
            {{/text.subhead}}
          {{/title.text}}
        {{/card.title}}
        {{#card.actions}}
          {{#paper-button}}
            {{t "issue_list.sample"}}
          {{/paper-button}}
          {{#paper-button}}
            {{t "issue_list.sample"}}
          {{/paper-button}}
        {{/card.actions}}
      {{/paper-card}}
    </div>
  {{/each}}
</div>
